<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ReferlActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/ic_refer1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/circale_green"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/txt_t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Share your referal code"
                android:textColor="@color/colorBalck"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/circale_green"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/txt_t2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Share your referal code"
                android:textColor="@color/colorBalck"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/circale_green"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/txt_t3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Share your referal code"
                android:textColor="@color/colorBalck"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_code"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="WXTRYFDHJ" />


            <TextView
                android:id="@+id/txt_copy"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/copy"
                android:textColor="@color/colorBalck"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_green2"
            android:orientation="horizontal"
            android:padding="10dp">


            <TextView
                android:id="@+id/txt_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_share"
                android:gravity="center"
                android:text="@string/invite_friends_now"
                android:textColor="@color/colorBalck"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>