<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E8E6E6"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/itemTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1.3"
                    android:gravity="center|left"
                    android:text="Flash Sale"
                    android:textColor="@color/colorBalck"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_weight="1.">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ends_in"
                        android:textColor="@color/colorBalck"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_day"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/rounded_time"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="2"
                        android:textColor="@color/colorWhite"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txt_hours"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/rounded_time"
                        android:gravity="center"

                        android:padding="3dp"
                        android:text="2"
                        android:textColor="@color/colorWhite"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txt_mits"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/rounded_time"
                        android:gravity="center"

                        android:padding="3dp"
                        android:text="2"
                        android:textColor="@color/colorWhite"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txt_secound"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:background="@drawable/rounded_time"
                        android:gravity="center"

                        android:padding="3dp"
                        android:text="2"
                        android:textColor="@color/colorWhite"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1.5"
                android:gravity="right"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_viewllproduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_selectd"
                    android:drawableRight="@drawable/ic_right"
                    android:gravity="right|center"
                    android:padding="5dp"
                    android:text="View all"
                    android:textColor="@color/colorBalck"
                    android:textSize="14dp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal" />
    </LinearLayout>

</LinearLayout>